<!DOCTYPE html>
<html lang="en">
    <% include components/htmlhead %>
    <body>
        <% include components/navbar %>
        <div class="container">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-sm-12 col-md-6">
                    <h1><%=pageTitle %></h1>
                    <% if (typeof errorMsg !== 'undefined') { %>
                        <h4 id="errorMsg" class="text-danger"><%= errorMsg %></h4>
                    <% } %>

                    <h3>You have <strong><%= user.userCredits %></strong> credits.</h3>      

                    <form id="frmCreateTask" action="/tasks" method="post">

                  
                        <div class="form-group">
                            <label for="name">Task Name</label>
                            <input type="text" name="name" class="form-control" required/><br>
                            <label for="description">Description</label>
                            <textarea name="description" rows="4" class="form-control" ></textarea><br>
                            <label for="assigner">Assigner:</label>
                            <select name="assigner" class="form-control">
                                <option value=<%= assigner.userId %> selected><%= assigner.userName %></option>
                            </select><br>
                            <label for="assignee">Assignee</label>
                            <select name="assignee" class="form-control" required>
                                <% assigneeList.forEach(function(member) { %>
                                    <option value=<%= member[0] %>><%= member[1] %></option>
                                <% }); %>
                            </select><br>
                            <label for="helpFile">Supporting Document (optional)</label>
                            <input type="file" name="helpFile" class="form-control" /><br>
                        </div>
                        <button type="submit" class="btn btn-default">Create Task</button>
                    </form>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div> <!-- container -->
        <% include components/scripts %>
    </body>
</html>