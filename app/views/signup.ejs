<!DOCTYPE html>
<!--

User sign up form
==================

-->
<html lang="en">
  <% include components/htmlhead %>
  <body>
    <div class="container">
      <h1>Products</h1>
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-sm-12 col-md-6">
          <form id="frmProducts" action="AddProduct" method="post">
            <div class="form-group">
              <label for="txtID">Product ID</label>
              <input type="text" class="form-control" id="txtID" name="txtID" placeholder="">
              <label for="txtName">Name</label>
              <input type="text" class="form-control" name="txtName" placeholder="">
              <label for="txtPrice">Price</label>
              <input type="text" class="form-control" name="txtPrice" placeholder="">
              <label for="txtQuantity">Quantity</label>
              <input type="text" class="form-control" name="txtQuantity" placeholder="">
              <label for="txtCategory">Category</label>
              <input type="text" class="form-control" name="txtCategory" placeholder="">
            </div>
            <p id="errorMsg" class="text-danger"></p>
            <button type="submit" class="btn btn-default">Add product</button>
          </form>

        </div>
        <div class="col-md-3"></div>
      </div>
    </div><!-- container -->
    <% include components/scripts %>
  </body>
</html>
